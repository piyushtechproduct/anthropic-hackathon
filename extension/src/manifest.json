{
  "manifest_version": 3,
  "name": "AI Commerce Agent",
  "version": "1.1.0",
  "description": "AI-powered shopping assistant for Amazon India and Flipkart",
  "permissions": ["activeTab", "scripting", "sidePanel", "storage", "tabs"],
  "host_permissions": ["https://www.amazon.in/*", "https://www.flipkart.com/*"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.in/*", "https://www.flipkart.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Open AI Commerce Agent"
  }
}
